---
import '@/styles/global.css';
import { Image } from 'astro:assets';
import { Card, CardContent, CardHeader } from '@/components/ui/card';
import { getCollection } from 'astro:content';
import { Navbar } from '@/components/ui/navbar';
import { ScrollToTopButton } from '@/components/scroll-to-top-button';
import { Spacer } from '@/components/ui/spacer';
import Footer from '@/components/ui/footer.astro';
import MainLayout from '@/layouts/main.astro';
import { Button } from '@/components/ui/button';
import config from '@/config';
import { ArrowRightIcon } from '@phosphor-icons/react';
import type { ImageMetadata } from 'astro';

const jobs = await getCollection('jobs');
const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/jobs/covers/*.{jpeg,jpg,png,gif}'
);
const jobImages = jobs.map((job) => {
  const cover = job.data.cover;
  if (images[`/src/assets/jobs/covers/${cover}`]) {
    return images[`/src/assets/jobs/covers/${cover}`];
  }
  throw new Error(`Cover image for job ${job.data.title} not found`);
});
---

<MainLayout title="Jobs">
  <Navbar client:load />
  <section
    class="mx-auto flex w-10/12 flex-col items-start py-12 lg:py-24 xl:w-10/12 2xl:w-[1280px]"
  >
    <h1
      class="text-text-1 mx-auto text-center text-5xl font-semibold md:mx-0 md:text-start"
    >
      Our job <span class="gradient-text">openings</span>
    </h1>
    <Spacer />
    <div
      class="flex w-full flex-col items-start justify-between gap-6 md:flex-row"
    >
      <h3 class="text-text-2 mx-auto text-center text-lg md:mx-0 md:text-start">
        Learn about our open roles and apply to join the growing team at
        Shorebird.
      </h3>
      <a href={config.handbookUrl} class="w-full md:w-auto">
        <Button variant="outline" className="w-full font-light">
          Learn more <ArrowRightIcon className="size-5" weight="bold" />
        </Button>
      </a>
    </div>
    <Spacer className="h-10" />
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
      {
        jobs.map((job, index) => (
          <a href={`/jobs/${job.id}`} class="hover:no-underline">
            <Card className="gap-2 py-0 cursor-pointer border-2 border-border-1 hover:border-accent-secondary-1">
              <CardHeader className="p-0">
                <Image
                  src={jobImages[index]()}
                  alt={`${job.data.title} cover image`}
                  class="w-full rounded-xl object-cover"
                />
              </CardHeader>
              <CardContent className="p-4">
                <div class="flex flex-col gap-3">
                  <h1 class="text-text-1 text-xl hover:underline">
                    {job.data.title}
                  </h1>
                </div>
                <p class="text-text-2 overflow-hidden text-ellipsis whitespace-nowrap">
                  {job.data.description}
                </p>
              </CardContent>
            </Card>
          </a>
        ))
      }
    </div>
  </section>
  <Footer />
  <ScrollToTopButton client:load />
</MainLayout>
