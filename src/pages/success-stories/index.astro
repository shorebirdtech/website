---
import '@/styles/global.css';
import { ArrowRight } from '@phosphor-icons/react';
import { Button } from '@/components/ui/button';
import { Card, CardHeader, CardContent } from '@/components/ui/card';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import { Navbar } from '@/components/navbar';
import { ScrollToTopButton } from '@/components/scroll-to-top-button';
import { Spacer } from '@/components/spacer';
import Banner from '@/components/banner.astro';
import config from '@/config';
import Footer from '@/components/footer.astro';
import FormattedDate from '@/components/blog/formatted-date.astro';
import MainLayout from '@/layouts/main.astro';
import type { ImageMetadata } from 'astro';

const stories = (await getCollection('success-stories'));

const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/blog/covers/*.{jpeg,jpg,png,gif}',
);
const postImages = stories.map((story) => {
  const cover = story.data.cover ?? 'default-cover.png';
  if (images[`/src/assets/success-stories/${cover}`]) {
    return images[`/src/assets/success-stories/${cover}`];
  }
  return images['/src/assets/success-stories/default-cover.png'];
});
---

<MainLayout title="Success Stories">
  <Banner />
  <Navbar client:load />
  <section
    class="mx-auto flex flex-col w-10/12 items-start py-12 lg:py-24 xl:w-10/12 2xl:w-[1280px]"
  >
    <h1 class="text-text-1 text-5xl font-semibold">
      Success stories
    </h1>
    <Spacer />
    <div
      class="flex flex-col md:flex-row justify-between items-start w-full gap-6"
    >
      <h3 class="text-text-2 text-lg lg:text-center">
        See how everyone from small teams to global companies are using Shorebird today.
      </h3>
    </div>
    <Spacer className="h-10" />
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {
        stories.map((story, index) => (
          <a href={`/success-stories/${story.id}`} class="hover:no-underline">
            <Card className="gap-2 py-0 cursor-pointer border-2 border-border-1 hover:border-accent-secondary-1">
              <CardHeader className="p-0">
                <Image
                  src={postImages[index]()}
                  alt={`${story.data.title} cover image`}
                  class="w-full object-cover rounded-xl"
                />
              </CardHeader>
              <CardContent className="p-4">
                <div class="flex flex-col gap-3">
                  <p class="text-sm text-text-2">
                    <FormattedDate date={story.data.date} />
                  </p>
                  <h1 class="text-xl text-text-1 hover:underline">
                    {story.data.title}
                  </h1>
                </div>
                <p class="text-text-2 whitespace-nowrap overflow-hidden text-ellipsis">
                  {story.data.description}
                </p>
              </CardContent>
            </Card>
          </a>
        ))
      }
    </div>
  </section>
  <Footer />
  <ScrollToTopButton client:load />
</MainLayout>
