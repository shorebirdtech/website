---
import { ArrowRight } from '@phosphor-icons/react';
import { Button, GradientOutlineButton } from '@/components/ui/button';
import { Card, CardHeader, CardContent } from '@/components/ui/card';
import { PricingCalculator } from '@/components/pricing-calculator';
import { Spacer } from '@/components/spacer';
import config from '@/config';
---

<section
  class="mx-auto flex w-10/12 flex-col py-12 lg:py-24 xl:w-10/12 2xl:w-[1280px]"
>
  <div class="flex flex-col justify-center items-center">
    <h1 class="text-text-1 text-4xl">Pay as you grow</h1>
    <Spacer />
    <h3 class="text-text-2 text-lg text-center">
      Deliver instant updates with pricing that scales as you grow.
    </h3>
    <Spacer className="h-10" />
    <PricingCalculator client:load />
    <Spacer className="h-10" />
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <Card>
        <CardHeader>
          <div class="flex flex-col w-full gap-3">
            <p class="text-lg">Free</p>
            <p class="text-sm text-text-2">
              Made for hobbyists, small apps, and demos.
            </p>
            <hr class="mt-2 text-border-1" />
          </div>
        </CardHeader>
        <CardContent className="flex flex-col w-full justify-center gap-6">
          <h2 class="text-3xl text-text-1">Free</h2>
          <a href={config.consoleUrl}>
            <GradientOutlineButton className="font-light w-full px-8">
              Get started <ArrowRight className="size-5" weight="bold" />
            </GradientOutlineButton>
          </a>
        </CardContent>
      </Card>
      <Card>
        <CardHeader>
          <div class="flex flex-col w-full gap-3">
            <p class="text-lg">Pro</p>
            <p class="text-sm text-text-2">
              Sized for usage from medium sized apps with scalable pricing.
            </p>
            <hr class="mt-2 text-border-1" />
          </div>
        </CardHeader>
        <CardContent className="flex flex-col w-full justify-center gap-6">
          <h2 class="text-3xl text-text-1">
            $20 <span class="text-text-2 text-sm">/month</span>
          </h2>
          <a href={config.proPlanCheckoutUrl}>
            <GradientOutlineButton className="font-light w-full px-8">
              Buy now <ArrowRight className="size-5" weight="bold" />
            </GradientOutlineButton>
          </a>
        </CardContent>
      </Card>
      <Card>
        <CardHeader>
          <div class="flex flex-col w-full gap-3">
            <p class="text-lg">Business</p>
            <p class="text-sm text-text-2">
              Great for large apps with advanced needs.
            </p>
            <hr class="mt-2 text-border-1" />
          </div>
        </CardHeader>
        <CardContent className="flex flex-col w-full justify-center gap-6">
          <h2 class="text-3xl text-text-1">
            $400 <span class="text-text-2 text-sm">/month</span>
          </h2>
          <a href={config.businessPlanCheckoutUrl}>
            <GradientOutlineButton className="font-light w-full px-8">
              Buy now <ArrowRight className="size-5" weight="bold" />
            </GradientOutlineButton>
          </a>
        </CardContent>
      </Card>
      <Card>
        <CardHeader>
          <div class="flex flex-col w-full gap-3">
            <p class="text-lg">Enterprise</p>
            <p class="text-sm text-text-2">
              Build a custom plan for enterprise apps & needs.
            </p>
            <hr class="mt-2 text-border-1" />
          </div>
        </CardHeader>
        <CardContent className="flex flex-col w-full justify-center gap-6">
          <h2 class="text-3xl text-text-1">Custom</h2>
          <a href={config.contactSales}>
            <Button variant="outline" className="font-light w-full px-8">
              Book a demo <ArrowRight className="size-5" weight="bold" />
            </Button>
          </a>
        </CardContent>
      </Card>
    </div>
  </div>
</section>
